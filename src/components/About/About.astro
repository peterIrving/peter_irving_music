---
/**
 * * About section
 */

import { Image } from "astro:assets";

import profileImage from "@assets/images/peter-headshot.jpeg";
import banjoImage from "@assets/images/banjo_on_the_lake.jpg";
import Button from "@components/Button/Button.astro";
---

<section id="about" class="site-container scroll-mt-10 py-8 md:py-12">
	<div class="flex flex-col md:flex-row">
		<div class="md:w-2/3">
			<h2 class="h3 text-primary-500 text-pretty uppercase">Meet the musician</h2>
			<h3 class="h2 mt-4">Peter Irving</h3>
			<div class="bg-base-100 mt-8 p-8 md:mb-20 lg:text-lg">
				<p>
					With a deep interest in clever word play and syncopation, Peter explores various elements
					of folk music. From pure dance rhythms to deep metaphors and story, expect to think, move
					and maybe blow off a little steam.
					<br />
					<br />
					<div class="colo justify-left flex p-2">
						<Button href="/music" variant="primary" class="px-8">Listen</Button>
					</div>
				</p>
			</div>
		</div>
		<div class="mr-auto max-w-md md:w-1/3 md:max-w-none md:self-center">
			<div class="my-auto aspect-[5/3] w-full overflow-hidden">
				<Image
					src={banjoImage}
					alt="Peter Irving playing music"
					width={450}
					densities={[1.5, 2]}
					class="h-auto min-h-full w-full min-w-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>
